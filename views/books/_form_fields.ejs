<label>Title</label>
<input type="text" name="title" value="<%= book.title %>">

<label>Author</label>
<select name="author">
<% authors.forEach(author => { %>
    <% if(book.author === author.id) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>"/>
    <% } else { %>
        <option label="<%= author.name %>" value="<%= author.id %>"/>
        <% } %>
    <% }) %>
</select>
<label>Publish Date</label>
<input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">

<label>Page count</label>
<input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">

<label>Cover</label>
<input type="file" name="cover" min="1">


<label>Description</label>
<textarea type="text" name="description" value="<%= book.description %>"></textarea>

